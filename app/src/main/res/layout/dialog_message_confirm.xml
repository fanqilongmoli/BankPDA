<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_login_input_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y52"
        android:textColor="#343434"
        android:textSize="@dimen/x20"
        tools:text="扫描包号失败，请检查" />



    <LinearLayout
        android:layout_marginBottom="@dimen/y24"
        android:layout_marginTop="@dimen/y50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20">
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y50"
            tools:text="确定"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/x18"
            android:background="@drawable/shape_confirm_btn"
            android:layout_marginRight="@dimen/x30"/>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y50"
            tools:text="取消"
            android:gravity="center"
            android:textColor="#153469"
            android:textSize="@dimen/x18"
            android:background="@drawable/shape_home_btn"/>
    </LinearLayout>

</LinearLayout>