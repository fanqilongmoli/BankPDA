<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
    tools:context=".modules.dopackage.PackageActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y5"
        android:background="#f4f4f4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:gravity="center"
        android:text="二代包"
        android:textColor="#343434"
        android:textSize="@dimen/x18" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:background="#e6e6e6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x16"
        android:paddingRight="@dimen/x16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#ff0000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="包号"
            android:textColor="#343434"
            android:textSize="@dimen/x18" />

        <EditText
            android:layout_width="@dimen/x320"
            android:layout_height="@dimen/y44"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/shape_package_input"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:textColor="#343434"
            android:textSize="@dimen/x14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:layout_marginTop="@dimen/y24"
        android:background="#f4f4f4" />

    <LinearLayout
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y48">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="捆列表"
            android:textColor="#343434"
            android:textSize="@dimen/x18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="("
            android:textColor="#343434"
            android:textSize="@dimen/x18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#153469"
            android:textSize="@dimen/x18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")"
            android:textColor="#343434"
            android:textSize="@dimen/x18" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:background="#e6e6e6" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:paddingTop="@dimen/y30"
        android:paddingBottom="@dimen/y40"
        android:paddingRight="@dimen/x30"
        android:paddingLeft="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/x22"
            android:background="@drawable/shape_confirm_btn"
            android:layout_height="@dimen/y50"
            android:layout_marginRight="@dimen/x60"
            android:text="完成装包"/>
        <TextView
            android:id="@+id/tv_cancel_package"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/x22"
            android:textColor="#153469"
            android:background="@drawable/shape_home_btn"
            android:layout_height="@dimen/y50"
            android:text="放弃装包"/>
    </LinearLayout>
</LinearLayout>