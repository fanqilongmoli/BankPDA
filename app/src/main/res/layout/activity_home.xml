<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".modules.home.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/home_banner" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y60"
            android:text="2018年4月20号"
            android:textColor="#fff"
            android:textSize="@dimen/x14" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_date"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y10"
            android:text="樊启龙"
            android:textColor="#fff"
            android:textSize="@dimen/x14" />

        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y68"
            android:text="南京银行南京分行"
            android:textColor="#fff"
            android:textSize="@dimen/x20" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/y20">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y30"
                android:src="@drawable/sh_home_qfzl" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="1,000,000"
                android:textColor="#153469"
                android:textSize="@dimen/x28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="今日清分总量（元）"
                android:textColor="#333"
                android:textSize="@dimen/x16" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/x2"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/x30"
            android:background="#e6e6e6" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/y20">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y30"
                android:src="@drawable/sh_home_kcze" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="1,000,000"
                android:textColor="#153469"
                android:textSize="@dimen/x28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="当前库存总额（元）"
                android:textColor="#333"
                android:textSize="@dimen/x16" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginRight="@dimen/x12"
        android:background="#e6e6e6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/y30">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y30"
                android:src="@drawable/sh_home_yzb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="20"
                android:textColor="#153469"
                android:textSize="@dimen/x28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="今日已装包（包）"
                android:textColor="#333"
                android:textSize="@dimen/x16" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/x2"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x30"
            android:background="#e6e6e6" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/y30">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y30"
                android:src="@drawable/sh_home_wzb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="10"
                android:textColor="#153469"
                android:textSize="@dimen/x28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="今日未装包（捆）"
                android:textColor="#333"
                android:textSize="@dimen/x16" />
        </LinearLayout>
    </LinearLayout>

    <com.flc.bankpda.widget.DashLineView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginRight="@dimen/x12" />

    <LinearLayout
        android:padding="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/y50"
            android:layout_weight="1"
            android:background="@drawable/shape_home_btn"
            android:gravity="center"
            android:textSize="@dimen/x20"
            android:textColor="#153469"
            android:text="任务入库" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/y50"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_weight="1"
            android:textSize="@dimen/x20"
            android:textColor="#153469"
            android:background="@drawable/shape_home_btn"
            android:gravity="center"
            android:text="任务出库" />

        <TextView
            android:id="@+id/tv_package"
            android:layout_width="0dp"
            android:layout_height="@dimen/y50"
            android:layout_weight="1"
            android:textSize="@dimen/x20"
            android:textColor="#153469"
            android:background="@drawable/shape_home_btn"
            android:gravity="center"
            android:text="装包" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4"
        android:gravity="center"
        android:textSize="@dimen/x16"
        android:text="技术支持：13312345678"
        />

</LinearLayout>